---
  export interface Props {
    action: 'close' | 'minimize' | 'maximize',
    title?: string    
  }

  const ACTIONS = {
    close: 'FF605C',
    minimize: 'FFBD44',
    maximize: '00CA4E',
  }

  const { action, title } = Astro.props as Props
  const backgroundColor = ACTIONS[action]
---

<div class={`w-3 h-3 rounded-full bg-[#${backgroundColor}]`}>
 { title } 
</div>